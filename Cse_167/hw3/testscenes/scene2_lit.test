# Test Scene 2 - Lit version
# A simple scene to test ray-surface intersections with a light source

size 640 480 
output scene2_lit.png
maxdepth 5

# Camera position 1
camera -2 -2 2 0 0 0 1 1 2 60

# Add a key light to enable proper shading
directional -1 -1 2  1 1 1


# Now specify the geometry.  First the cube, then the spheres

maxverts 8

vertex -1 -1 -1
vertex +1 -1 -1 
vertex +1 +1 -1 
vertex -1 +1 -1 
vertex -1 -1 +1
vertex +1 -1 +1 
vertex +1 +1 +1
vertex -1 +1 +1

# Define materials for the cube faces
# face -Y
diffuse .5 0 .5 
ambient .5 0 .5 
specular 0.5 0.5 0.5
shininess 50
tri 0 1 5 
tri 0 5 4 

# face +Y
diffuse .5 1 .5 
ambient .5 1 .5 
tri 3 7 6
tri 3 6 2

# face +X
diffuse 1 .5 .5 
ambient 1 .5 .5 
tri 1 2 6
tri 1 6 5 

# face -X
diffuse 0 .5 .5 
ambient 0 .5 .5 
tri 0 7 3 
tri 0 4 7 

# face -Z
diffuse .5 .5 0
ambient .5 .5 0
tri 0 3 2 
tri 0 2 1

# face +Z
diffuse .5 .5 1
ambient .5 .5 1
tri 4 5 6 
tri 4 6 7 

# Make spheres (pips on the dice)
diffuse 1 1 1
ambient 1 1 1
specular 0.1 0.1 0.1
shininess 10

sphere 1 0 0 0.15

sphere -.5 1 -.5 0.15
sphere +.5 1 +.5 0.15

sphere 0 0 1 0.15
sphere -.5 -.5 1 0.15
sphere +.5 +.5 1 0.15

sphere -1 -.5 -.5 0.15
sphere -1 -.5 +.5 0.15
sphere -1 +.5 +.5 0.15
sphere -1 +.5 -.5 0.15

sphere -.5 -1 -.5 0.15
sphere -.5 -1 +.5 0.15
sphere +.5 -1 +.5 0.15
sphere +.5 -1 -.5 0.15
sphere  0 -1 0 0.15

sphere -.5 -.5 -1 0.15
sphere -.5   0 -1 0.15
sphere -.5 +.5 -1 0.15
sphere +.5 -.5 -1 0.15
sphere +.5   0 -1 0.15
sphere +.5 +.5 -1 0.15
